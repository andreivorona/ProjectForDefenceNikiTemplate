@model PetsDate.Web.ViewModels.Publication.PublicationListViewModel
@{
    this.ViewData["Title"] = "All Publications, page " + Model.PageNumber;
}

<div class="text-center h1">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="container row justify-content-xl-center">

    @foreach (var publication in this.Model.Publications)
    {
        <div class="card col-md-3 mt-4 mr-4">
            
            <div class="card-body">
                <h5 class="card-title">@publication.UserName</h5>

                <p class="card-text">Description: @publication.Description</p>

                <a class="btn btn-primary mb-2" asp-area="" asp-controller="Publication" asp-action="Info" asp-route-id="@publication.Id">Info Page</a>

            </div>
        </div>
    }
</div>

<a class="btn btn-primary mb-2" asp-area="" asp-controller="Home" asp-action="Index">Return</a>

<partial name="_PagingPartial" model="@Model" />


