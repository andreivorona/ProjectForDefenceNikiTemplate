@model PetsDate.Web.ViewModels.Animal.AnimalListViewModel
@{
    this.ViewData["Title"] = "Collection of Images";
}

<div class="text-center h1">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="container row justify-content-xl-center">

    @foreach (var animalImage in this.Model.AnimalImages)
    {
    <div class="card col-md-3 mt-4 mr-4">
        <img class="card-img-top" src="@animalImage.ImageUrl" alt="Card image cap">

        <form id="deleteForm" asp-controller="Animal" asp-action="DeleteImageFromCollection" asp-route-id="@animalImage.Id">
        </form>

        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
    </div>
    }

</div>

<div class="text-center h1">
    <a class="btn btn-primary" asp-area="" asp-controller="Animal" asp-action="All">Return</a>
</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title">Delete AnimalImage</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">
                <p>Do you want to delete Image?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>