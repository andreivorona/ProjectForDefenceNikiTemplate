@model PetsDate.Web.ViewModels.Animal.AnimalListViewModel
@{
    this.ViewData["Title"] = "All Animals";
}

<div class="text-center h1">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="container row justify-content-xl-center">

    @foreach (var animal in this.Model.Animals)
    {
        <div class="card col-md-3 mt-4 mr-4" style="width: 18rem;">
            <img class="card-img-top" src="@animal.ImageUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@animal.Name</h5>
                <p class="card-text">Age: @animal.Age</p>
                <p class="card-text">Color: @animal.Color</p>
                <p class="card-text">Weight: @animal.Weight</p>
                <p class="card-text">Category: @animal.CategoryName</p>

                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    };
</div>

<nav aria-label="..." class="mt-4">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <span class="page-link">Previous</span>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                2
                <span class="sr-only">(current)</span>
            </span>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>


