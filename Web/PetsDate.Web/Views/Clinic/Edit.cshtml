@model PetsDate.Web.ViewModels.Clinic.EditClinicInputModel

@{
    this.ViewData["Title"] = "Edit Clinic";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" class="col-md-6 offset-3" enctype="multipart/form-data">

    <section class="form-group">
        <label asp-for="Name"></label>

        <input asp-for="Name" class="form-control" placeholder="Name..." />

        <span asp-validation-for="Name" class="text-danger"></span>
    </section>

    <section class="form-group">
        <label asp-for="Location"></label>

        <input asp-for="Location" class="form-control" placeholder="Address..." />

        <span asp-validation-for="Location" class="text-danger"></span>
    </section>

    <section class="form-group">
        <label asp-for="ImageUrl"></label>

        <input asp-for="ImageUrl" class="form-control" />

        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </section>

    <input type="submit" class="btn btn-dark  mt-3" value="Edit" />

</form>

<hr />

<a class="btn btn-primary mb-2" asp-area="" asp-controller="Animal" asp-action="Info" asp-route-id="@Model.Id">Return</a>
