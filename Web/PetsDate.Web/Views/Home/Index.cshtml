@using PetsDate.Common
@model PetsDate.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>

    @if (this.User.Identity.IsAuthenticated)
    {
        <a class="btn btn-info" asp-controller="Home" asp-action="Chat" target="_blank">chat page</a>
    }

    <div class="container row justify-content-xl-center">

        @foreach (var user in this.Model.Users)
        {
            <div class="card col-md-3 mt-4 mr-4 p-3 mb-2 bg-success text-white" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title">@user.UserName</h5>
                    <p class="card-text">Email: @user.Email</p>
                    @if (user.PhoneNumber != null)
                    {
                        <p class="card-text">Phone number: @user.PhoneNumber</p>
                    }
                </div>
            </div>
        }
    </div>

    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-controller="Edit" asp-action="Index">Admin Page Counts</a>
    }

    <hr />

    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-controller="Animals" asp-action="Index">Animals Control Panel</a>
    }

    <hr />

    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-controller="AnimalImages" asp-action="Index">AnimalImages Control Panel</a>
    }

    <hr />

    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-controller="Categories" asp-action="Index">Categories Control Panel</a>
    }

    <hr />

    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-controller="Clinics" asp-action="Index">Clinics Control Panel</a>
    }

    <hr />

    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-controller="Hotels" asp-action="Index">Hotels Control Panel</a>
    }

    <hr />

    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Administrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-controller="Publications" asp-action="Index">Publications Control Panel</a>
    }

    <hr />
</div>
