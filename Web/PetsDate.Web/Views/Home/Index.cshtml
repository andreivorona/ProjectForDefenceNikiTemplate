@using PetsDate.Common
@model PetsDate.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>We have:</p>
    <ul>
        <li>
            Users: @Model.UsersCount
        </li>

        <li>
            Animals: @Model.AnimalsCount
        </li>

        <li>
            Clinics: @Model.ClinicCount
        </li>

        <li>
            Publications: @Model.PublicationCount
        </li>

        <li>
            Events: @Model.EventsCount
        </li>

        <li>
            Hotels: @Model.HoteslCount
        </li>

        <li>
            Sos Signals: @Model.SosSignslsCount
        </li>

        <li>
            Categories: @Model.CategoriesCount
        </li>
    </ul>

    <a asp-area="Administration" asp-controller="Edit" asp-action="Index">Admin Page</a>
</div>
