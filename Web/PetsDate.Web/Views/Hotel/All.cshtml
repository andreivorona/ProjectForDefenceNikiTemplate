@model PetsDate.Web.ViewModels.Hotel.HotelListViewModel
@{
    this.ViewData["Title"] = "All Hotels, page " + Model.PageNumber;
}

<div class="text-center h1">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="container row justify-content-xl-center">

    @foreach (var hotel in this.Model.Hotels)
    {
        <div class="card col-md-3 mt-4 mr-4">
            <img class="card-img-top" src="@hotel.ImageUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@hotel.Name</h5>

                <p class="card-text">Location: @hotel.Location</p>

                <p class="card-text">Description: @hotel.Description</p>

                <a class="btn btn-primary mb-2" asp-area="" asp-controller="Hotel" asp-action="Info" asp-route-id="@hotel.Id">Info Page</a>
            </div>
        </div>
    }
</div>

<a class="btn btn-primary mb-2" asp-area="" asp-controller="Home" asp-action="Index">Return</a>

<partial name="_PagingPartial" model="@Model" />

