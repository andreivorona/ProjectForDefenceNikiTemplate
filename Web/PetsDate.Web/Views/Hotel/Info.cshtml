@model PetsDate.Web.ViewModels.Hotel.HotelListAllViewModel

@{
    this.ViewData["Title"] = "Hotel Info Page";
}

<div class="text-center h1">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="container">

    <img class="info-image" src="@Model.ImageUrl" alt="Card image cap">

    <h5 class="info-title">Name: @Model.Name</h5>
    <p class="info-text">Adress: @Model.Location</p>

    <a class="btn btn-primary mb-2" asp-area="" asp-controller="Hotel" asp-action="All">Return</a>

    <a class="btn btn-dark mb-2" asp-controller="Hotel" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

    <form id="deleteForm" asp-controller="Hotel" asp-action="Delete" asp-route-id="@Model.Id">
    </form>

    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title">Delete Hotel</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">
                <p>Do you want to delete "@Model.Name"?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>
